                <div class="wrap-input100 validate-input" data-validate="monete">
                    <span class="label-input100">Monete</span>
                    <div>
                        <p style="width: 50px;float: left;color: black"><b>Oro:</b></p>
                        <input class="label-input150" name="oro" value="0">mo
                    </div>
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <span class="label-input100">Inventario</span>
                    <ul id="Inventori_list">
                        
                    </ul>
                    <div class="container-contact100-form-btn">
