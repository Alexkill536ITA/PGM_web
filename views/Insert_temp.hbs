                            <option>Stregone</option>
                            <option>Warlock</option>
                        </select>
                    </div>
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 input100-select">
                    <span class="label-input100">Background</span>
                    <div>
                        <select class="selection-2" name="background">
                            <option>Scegli Background</option>
                            <option>Accolito</option>
